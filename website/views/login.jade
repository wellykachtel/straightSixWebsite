extends layout

block content
	if loginError
		div.row
			div.col-xs-2
			div.col-xs-8.alert.alert-error
				div #{loginError}
	form#loginForm(name='login' method='post' action='/login-process')
		div.row
			div.col-xs-4
			div.col-xs-4
				div.form-group
					label(for='email') Email
					input(type='email' class='form-control' id='email' name='email')
				div.form-group
					label(for='password') Password
					input(type='password' class='form-control' id='password' name='password')
				div.row
					div.col-xs-9
					div.col-xs-3
						button(type="submit" class="btn btn-info btn-block" id='submit') Login

